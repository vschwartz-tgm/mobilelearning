<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.neeraj.mobilelearning.PlayActivity"
    android:background="@drawable/bg"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <Button
            android:id="@+id/word_to_num"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/textspeech"
            android:layout_centerHorizontal="true"
            android:background="@drawable/wort_zu_zahl" />

        <Button
            android:id="@+id/perle_zu_zahl"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/perle_zu_zahl"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/word_to_num_txt"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/word_to_num"
            android:layout_toEndOf="@+id/word_to_num"
            android:background="@drawable/zahl_zu_text"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/markezahl"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textspeech"
            android:layout_toEndOf="@+id/textspeech"
            android:background="@drawable/marke_zu_zahl"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/textspeech"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/word_to_num"
            android:background="@drawable/speech" />

        <Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/markezahl" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
