<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.neeraj.mobilelearning.PlayActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <Button
            android:id="@+id/word_to_num"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/markezahl"
            android:layout_alignStart="@+id/word_to_num_txt"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="23dp"
            android:background="@drawable/wort_zu_zahl" />

        <Button
            android:id="@+id/perle_zu_zahl"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/perle_zu_zahl"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/word_to_num_txt"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/perle_zu_zahl"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@+id/perle_zu_zahl"
            android:background="@drawable/zahl_zu_text"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignEnd="@+id/perle_zu_zahl"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/markezahl"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignEnd="@+id/perle_zu_zahl"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="81dp"
            android:layout_marginEnd="103dp"
            android:background="@drawable/marke_zu_zahl"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/markezahl" />

        <Button
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/info"
            android:layout_alignBottom="@+id/info"
            android:layout_toEndOf="@+id/space"
            tools:background="@drawable/setting" />

        <Button
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignStart="@+id/word_to_num"
            android:layout_marginBottom="86dp"
            android:layout_marginStart="82dp"
            tools:background="@drawable/info"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="184dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
